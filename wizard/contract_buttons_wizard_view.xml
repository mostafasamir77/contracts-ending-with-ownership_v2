<odoo>

<!-- Start of cancel button  -->
    <record id="cancel_button_wizard_form" model="ir.ui.view">
        <field name="name">cancel button form</field>
        <field name="model">cancel.button</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="contract_wizard_id" invisible="1"/>

                    <field name="reason"/>

                </group>
                <h3 style="color: red;" class="p-3">Note: Are you sure you want to cancel this contract ?</h3>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cancel_button_wizard_action" model="ir.actions.act_window">
        <field name="name">cancel button</field>
        <field name="res_model">cancel.button</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

 <!-- End of cancel button  -->


<!-- Start of confirm button  -->

    <record id="confirm_button_wizard_form" model="ir.ui.view">
        <field name="name">confirm button form</field>
        <field name="model">confirm.button</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="contract_wizard_id" invisible="1"/>

                </group>
                <h3 style="color: red;" class="p-3">Note: Are you sure you want to Confirm this contract ?</h3>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="confirm_button_wizard_action" model="ir.actions.act_window">
        <field name="name">confirm button</field>
        <field name="res_model">confirm.button</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

 <!-- End of confirm button  -->




<!-- Start of pickup button  -->

    <record id="pickup_button_wizard_form" model="ir.ui.view">
        <field name="name">pickup button form</field>
        <field name="model">pickup.button</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="contract_wizard_id" invisible="1"/>

                    <field name="km_out"/>
                    <field name="fuel_out"/>

                    <notebook>
                        <page string="Check Out">
                            <group>
                                <group>
                                    <field name="ac_out"/>
                                    <field name="radio_stereo_out"/>
                                    <field name="screen_out"/>
                                    <field name="spere_time_out"/>
                                    <field name="tires_out"/>
                                </group>
                                <group>
                                    <field name="spere_tires_out"/>
                                    <field name="keys_out"/>
                                    <field name="car_seats_out"/>
                                    <field name="fire_extinguisher_out"/>
                                    <field name="first_aid_kit_out"/>
                                    <field name="vehicle_status_out"/>
                                </group>
                                <group colspan="2">
                                    <div class="o_field_widget o_field_image mt-4">
                                        <div class="row g-2">
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_1"/>
                                                <field name="image_1" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_2"/>
                                                <field name="image_2" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_3"/>
                                                <field name="image_3" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_4"/>
                                                <field name="image_4" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_5"/>
                                                <field name="image_5" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_6"/>
                                                <field name="image_6" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_7"/>
                                                <field name="image_7" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_8"/>
                                                <field name="image_8" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_9"/>
                                                <field name="image_9" widget="image" nolabel="1"/>
                                            </div>
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 p-1">
                                                <label for="image_10"/>
                                                <field name="image_10" widget="image" nolabel="1"/>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
