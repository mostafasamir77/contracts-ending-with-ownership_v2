 <!-- start of add statement button  -->

    <record id="add_statement_wizard_form" model="ir.ui.view">
        <field name="name">Add Statement</field>
        <field name="model">add.statement.button</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="statement_type"/>
                        <field name="statement_status" invisible="(call_status != 'answered') or (statement_type != 'phone')"/>
                    </group>
                    <group>
                        <field name="call_status" invisible="statement_type != 'phone'"/>
                        <field name="payment_date" invisible="(statement_status != 'pledge_to_payment') or (call_status != 'answered') or (statement_type != 'phone')"/>
                    </group>
                    <group>
                        <field name="details"/>
                    </group>
                </group>
                <footer>
                    <button string="Add Statement" type="object" name="action_add_statement" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="add_statement_wizard_action" model="ir.actions.act_window">
